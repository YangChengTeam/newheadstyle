<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_info_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="6dp"
            android:paddingTop="10dp"
            android:paddingRight="6dp"
            android:src="@mipmap/add_note_friends" />

        <com.feiyou.headstyle.view.MyEditText
            android:id="@+id/et_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/head_pre_bg"
            android:gravity="left|center"
            android:hint="请输入评论内容"
            android:inputType="textMultiLine"
            android:lineSpacingMultiplier="1.3"
            android:minHeight="30dp"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:paddingBottom="6dp"
            android:textColor="@color/black1"
            android:textColorHint="@color/gray999"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="28dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp">

            <TextView
                android:id="@+id/tv_send_commit"
                android:layout_width="56dp"
                android:layout_height="28dp"
                android:layout_gravity="bottom"
                android:background="@drawable/common_red_bg"
                android:clickable="false"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="发 表"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
