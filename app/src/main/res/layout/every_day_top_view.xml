<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/every_day_top"
            android:gravity="top|center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="恭喜您获得现金"
                android:textColor="@color/every_day_top_txt_color"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="112dp"
                    android:layout_height="73dp">

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:text="0.0"
                        android:textColor="@color/every_day_top_txt_color"
                        android:textSize="55dp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/layout_money_mask"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/money_mask"></ImageView>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="元"
                    android:textColor="@color/every_day_top_txt_color"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_cash_money"
                android:layout_width="206dp"
                android:layout_height="36dp"
                android:layout_marginTop="6dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_random_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textColor="@color/gray_aaa"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
