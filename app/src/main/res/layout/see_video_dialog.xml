<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="140dp"
        android:background="@drawable/common_white_bg"
        android:gravity="top|center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="每日看视频领钱"
            android:textColor="@color/see_video_color"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_margin="12dp"
            android:background="@drawable/see_video_bg"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_margin="6dp"
                android:src="@mipmap/turn_profit_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看视频拿奖励"
                    android:textColor="@color/black1"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="看完30秒才能拿到奖励"
                    android:textColor="@color/black2"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.05-1元"
                    android:textColor="@color/see_video_money_color"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_get_money"
                    android:layout_width="60dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/common_red_bg"
                    android:text="立即领钱"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/close_dialog" />
    </LinearLayout>
</LinearLayout>
